<h1>類別管理</h1>
<div class="row">
  <div class="col-3">
    <div class="list-group">
      <a href="/admin/items" class="list-group-item list-group-item-action">商品管理</a>
      <a href="/admin/orders" class="list-group-item list-group-item-action">訂單管理</a>
      <a href="/admin/catogories" class="list-group-item list-group-item-action">類別管理</a>

    </div>
  </div>
  <div class="col-9">
    <form action="/admin/catogories" method="POST">
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="輸入類別" aria-describedby="button-addon2" name="catogory">
        <div class="input-group-append">
          <button class="btn btn-success" type="submit" id="button-addon2">新增</button>
        </div>
      </div>
    </form>
    {{#each catogories}}
    <div class="row">
      <div class="col-10">
        <li class="list-group-item">類別: {{this.name}}</li>
      </div>
      <div class="col-2 ">
        <form action="/admin/catogories/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">刪除</button>
        </form>
      </div>
    </div>
    {{/each}}

  </div>
</div>