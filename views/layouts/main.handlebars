<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>final</title>
  <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
</head>

<body>
  <header class="fixed-top">
    {{!-- Navbar --}}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex ">
      <a class="navbar-brand font-weight-bold ml-1" href="/">
        <h3>LOGO</h3>
      </a>
      {{#ifRole user.role}}
      <a class="navbar-brand font-weight-bold ml-1" href="/admin">
        <h4>Manage-platform</h4>
      </a>
      {{/ifRole}}
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav">
          {{#if user}}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
              data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="far fa-user text-white"></i>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              {{#if user.Orders}}
              {{#each user.Orders}}
              <a href="/checkorder/{{this.dataValues.id}}" class="dropdown-item">訂單{{this.dataValues.id}}</a>
              {{/each}}
              {{else}}
              <a class="dropdown-item">無訂單</a>
              {{/if}}
            </div>
          </li>
          <li class="nav-item ">
            <a class="btn mt-1" href="/cart"><i class="fas fa-shopping-cart text-white"></i> <span
                class="badge badge-light">{{user.CartProducts.length}}</span></a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="btn font-weight-bold text-white">LogOut</a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="btn" href="/signin"><i class="far fa-user text-white"></i></a>
          </li>
          <li class="nav-item">
            <a class="btn" href="/signin"><i class="fas fa-shopping-cart text-white"></i> <span
                class="badge badge-light">{{user.CartProducts.length}}</span></a>
          </li>
          <li class="nav-item">
            <a href="/signin" class="btn font-weight-bold text-white">LogIn</a>
          </li>
          {{/if}}

        </ul>
      </div>
    </nav>
    {{#if success_messages}}
    <div class="alert alert-success" role="alert">
      {{success_messages}}
    </div>
    {{/if}}
    {{#if error_messages}}
    <div class="alert alert-danger" role="alert">
      {{error_messages}}
    </div>
    {{/if}}

  </header>
  <main class="pt-5 mt-5">
    <div class="container">
      {{{body}}}
    </div>
  </main>
  <footer class="mt-5 pt-5">

    <p class="d-flex justify-content-center">Copyright 2020 by author</p>
  </footer>
  <div class="fb-customerchat" page_id="107752854246986" ref="messaging_postbacks" logged_in_greeting="你好~~"
    logged_out_greeting="你好~~" greeting_dialog_display="hide">
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/c25a5b0a92.js" crossorigin="anonymous"></script>
  <script>
    window.fbAsyncInit = function () {
      FB.init({
        appId: '2788655681420572',
        autoLogAppEvents: true,
        xfbml: true,
        version: 'v6.0'
      });
    };

    (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) { return; }
      js = d.createElement(s); js.id = id;
      js.src = "https://connect.facebook.net/zh_TW/sdk/xfbml.customerchat.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

  </script>
  <script>

    function preventDouble() {
      let x = document.getElementsByClassName("dd")
      for (let i = 0; i < x.length; i++) {
        x[i].disabled = true
      }
      return true
    }
  </script>

</body>

</html>