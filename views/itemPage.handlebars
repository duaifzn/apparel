{{!-- <h1>itemPage</h1> --}}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item "><a href="/">首頁</a></li>
    <li class="breadcrumb-item "><a href="/catogories/{{catogory.id}}">{{catogory.name}}</a></li>
    <li class="breadcrumb-item active">{{product.name}}</li>
  </ol>
</nav>
<div class="row">
  <div id="carouselExampleIndicators" class="carousel slide col-12 col-md-6" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src={{product.image1}} class="d-block w-100" style="height: 450px" alt="...">
      </div>
      <div class="carousel-item h-25">
        <img src={{product.image2}} class="d-block w-100" style="height: 450px" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="col-12 col-md-6">
    <h2>{{product.name}}</h2>
    <h4>${{product.price}}</h4>
    <p>{{product.introduction}}</p>
    <form action="/cart" method="POST" onsubmit="preventDouble()">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <button class="btn btn-outline-dark" type="button" onclick="reduce()">-</button>
        </div>
        <input type="text" class="w-25" id="amount" name="amount" value="1">
        <div class="input-group-append">
          <button class="btn btn-outline-dark" type="button" onclick="add()">+</button>
        </div>
      </div>
      <button class="dd btn btn-outline-primary" type="submit">加入購物車</button>
      <input type="text" class="invisible" id="productId" name="productId" value="{{product.id}}">
      <input type="text" class="invisible" id="productPrice" name="productPrice" value="{{product.price}}">

    </form>
  </div>
</div>
<script>
  function add() {
    let amount = Number(document.getElementById("amount").value)
    amount++
    document.getElementById("amount").value = amount
  }
  function reduce() {
    let amount = Number(document.getElementById("amount").value)
    if (amount > 1) { amount-- }
    document.getElementById("amount").value = amount
  }

</script>